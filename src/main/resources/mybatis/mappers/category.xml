<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
  <insert id="add" parameterType="categoryvo">
    <![CDATA[
      insert into category
      values(null, #{blogNo}, #{categoryName}, #{description}, #{posting});
    ]]>
  </insert>

  <select id="getListByBlogNo"
          parameterType="long"
          resultType="categoryvo">
    <![CDATA[
      select no, blog_no as blogNo, category_name as categoryName,
        description, posting
      from category
      where blog_no = #{blogNo}
      order by posting desc;
    ]]>
  </select>

  <delete id="deleteByNo" parameterType="map">
    <![CDATA[
      delete from category
      where no = #{no};
    ]]>
  </delete>

  <select id="getByCategoryName"
          parameterType="string"
          resultType="categoryvo">
    <![CDATA[
      select no, blog_no as blogNo, category_name as categoryName,
        description, posting
      from category
      where category_name = #{categoryName};
    ]]>
  </select>
</mapper>
